@model ProjectFormModel

<div class="project-form-container">
    <div class="project-form-header">
        <h2>Edit Project</h2>
        <p class="project-form-subtitle">Update project details and time estimates</p>
    </div>

    <form method="post" class="modern-form">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label asp-for="ProjectName">Project Name</label>
            <input asp-for="ProjectName" class="form-control" placeholder="Enter the name of your project...">
            <span asp-validation-for="ProjectName" class="small text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProjectNumber">Project Number</label>
            <input asp-for="ProjectNumber" class="form-control" placeholder="Enter unique project number...">
            <span asp-validation-for="ProjectNumber" class="small text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClientName">Client Name</label>
            <input asp-for="ClientName" class="form-control" placeholder="Enter client name (optional)...">
            <span asp-validation-for="ClientName" class="small text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Appliance">Area of Application</label>
            <input asp-for="Appliance" class="form-control" placeholder="Enter area of application (optional)...">
            <span asp-validation-for="Appliance" class="small text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TotalHoursSpent">Manual Time Estimate</label>
            <input asp-for="TotalHoursSpent" class="form-control" placeholder="Manual estimate of total hours...">
            <span asp-validation-for="TotalHoursSpent" class="small text-danger"></span>
            <small class="form-help-text">
                This is your manual estimate. The system also tracks actual time from completed tasks for comparison.
            </small>
        </div>

        <div class="form-group">
            <label asp-for="ProjectStatusId">Project Status</label>
            <select asp-for="ProjectStatusId" class="form-control">
                @foreach (var status in Model.ProjectStatuses)
                {
                    <option value="@status.Id">@status.Name</option>
                }
            </select>
            <span asp-validation-for="ProjectStatusId" class="small text-danger"></span>
        </div>

        <div class="text-center">
            <input class="enhanced-submit-btn" type="submit" value="Update Project" />
        </div>
    </form>
</div>
