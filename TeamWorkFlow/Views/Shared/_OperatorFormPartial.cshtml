@model OperatorFormModel

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<div class="mb-3">
				<label asp-for="@Model.FullName" class="form-label-add-edit">Full name</label>
				<input asp-for="@Model.FullName" class="form-control" aria-required="true" />
				<span asp-validation-for="@Model.FullName" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.Email" class="form-label-add-edit">Email address</label>
				<input asp-for="@Model.Email" class="form-control" aria-required="true" />
				<span asp-validation-for="@Model.Email" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.PhoneNumber" class="form-label-add-edit">Phone number</label>
				<input asp-for="@Model.PhoneNumber" class="form-control" aria-required="true" />
				<span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.Capacity" class="form-label-add-edit">Capacity</label>
				<input asp-for="@Model.Capacity" class="form-control" aria-required="true" />
				<span asp-validation-for="@Model.Capacity" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.IsActive" class="form-label-add-edit">Is active</label>
				<input asp-for="@Model.IsActive" class="form-control" aria-required="true" />
				<span asp-validation-for="@Model.IsActive" class="text-danger"></span>
			</div>
			@*<div class="mb-3">
				<label asp-for="@Model.UserId" class="form-label-add-edit">User id</label>
				<input asp-for="@Model.UserId" class="form-control" aria-required="true" />
				<span asp-validation-for="@Model.UserId" class="text-danger"></span>
			</div>*@
			<div class="mb-3">
				<label asp-for="@Model.AvailabilityStatusId" class="form-label-add-edit">Select status</label>
				<select asp-for="@Model.AvailabilityStatusId" class="form-control" aria-required="true">
					<option disabled selected value="">Select Category...</option>
					@foreach (var s in Model.AvailabilityStatusModels)
					{
						<option value="@s.Id">@s.Name</option>
					}
				</select>
				<span asp-validation-for="@Model.AvailabilityStatusId" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Apply changes" />
			</div>
		</form>
	</div>
</div>