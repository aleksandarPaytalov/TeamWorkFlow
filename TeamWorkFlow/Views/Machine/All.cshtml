@model AllMachinesQueryModel
@{
	ViewData["Title"] = "List of available measuring machine";
}

@{
	var previousPage = Model.CurrentPage - 1;
	if (previousPage < 1)
	{
		previousPage = 1;
	}

	var maxPage = Math.Ceiling((decimal)Model.TotalMachinesCount / (decimal)Model.MachinesPerPage);
}

<h2 class="text-center">@ViewBag.Title</h2>

@if (User?.Identity?.IsAuthenticated ?? false)
{
	if (User.IsAdmin())
	{
		<a href="@Url.Action("Add", "Machine")" class="btn btn-success">Add new machine</a>
		<hr />
	}

	<form method="get">
		<div class="row">
			<div class="form-group col-md-4">
				<div class="form-group">
					<label asp-for="Search"></label>
					<input asp-for="Search" class="form-control" placeholder="Search by machine name...">
				</div>
			</div>

			<div class="form-group col-md-4">
				<div class="form-group">
					<label asp-for="Sorting"></label>
					<select asp-for="Sorting" class="form-control" onchange="this.form.submit()">
						<option value="0">Last added machine</option>
						<option value="1">By name ascending</option>
						<option value="2">By name descending</option>
						<option value="3">By calibration date ascending</option>
						<option value="4">By calibration date descending</option>
						<option value="5">By capacity ascending</option>
						<option value="6">By capacity descending</option>
					</select>
				</div>
			</div>

			<div class="col-md-4">
				<div class="form-group mt-4 p-2">
					<input type="submit" value="Search" class="btn btn-primary" />
					<a asp-action="All" class="btn btn-secondary">Clear</a>
				</div>
			</div>
		</div>
	</form>
	<hr />

	<div class="table-responsive">
		<table class="table table-bordered">
			<thead>
			<tr>
				<th>Name</th>
				<th>Next Calibration date</th>
				<th>Is calibrated</th>
				<th>Daily capacity</th>
				<th>Action buttons</th>
			</tr>
			</thead>
			<tbody>
			@foreach (var m in Model.Machines)
			{
				<tr>
					<td>@m.Name</td>
					<td>@m.CalibrationSchedule</td>
					<td>@m.IsCalibrated</td>
					<td>@m.Capacity</td>

					@if (User.IsAdmin())
					{
						<td>
							<a href="@Url.Action("Edit", "Machine", new { id = m.Id, extension = m.GetMachineExtension() })" class="btn btn-primary">Edit</a>
							<a href="@Url.Action("Delete", "Machine", new { id = m.Id, extension = m.GetMachineExtension() })" class="btn btn-danger">Delete</a>
							<a href="@Url.Action("Details", "Machine", new { id = m.Id, extension = m.GetMachineExtension() })" class="btn btn-primary">Details</a>
						</td>
					}
					else if (User.IsOperator())
					{
							<td>
								<a href="@Url.Action("Details", "Machine", new { id = m.Id, extension = m.GetMachineExtension() })" class="btn btn-primary">Details</a>
							</td>
					}
				</tr>
			}
			</tbody>
		</table>
	</div>

	@if (maxPage > 1)
	{
		<nav aria-label="Page navigation">
			<ul class="pagination justify-content-center">
				@if (Model.CurrentPage > 1)
				{
					<li class="page-item">
						<a class="page-link"
						   asp-action="All"
						   asp-route-currentPage="@(Model.CurrentPage - 1)"
						   asp-route-search="@Model.Search"
						   asp-route-sorting="@Model.Sorting">Previous</a>
					</li>
				}

				@for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min((int)maxPage, Model.CurrentPage + 2); i++)
				{
					<li class="page-item @(i == Model.CurrentPage ? "active" : "")">
						<a class="page-link"
						   asp-action="All"
						   asp-route-currentPage="@i"
						   asp-route-search="@Model.Search"
						   asp-route-sorting="@Model.Sorting">@i</a>
					</li>
				}

				@if (Model.CurrentPage < maxPage)
				{
					<li class="page-item">
						<a class="page-link"
						   asp-action="All"
						   asp-route-currentPage="@(Model.CurrentPage + 1)"
						   asp-route-search="@Model.Search"
						   asp-route-sorting="@Model.Sorting">Next</a>
					</li>
				}
			</ul>
		</nav>
	}

}

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
