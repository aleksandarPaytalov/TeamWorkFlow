@model AddTaskViewModel
@{
	ViewData["Title"] = "Add new Task to the List";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
	        <div class="mb-3">
		        <label asp-for="@Model.ProjectNumber" class="form-label-add-edit">ProjectNumber</label>
		        <input asp-for="@Model.ProjectNumber" class="form-control" aria-required="true" />
		        <span asp-validation-for="@Model.ProjectNumber" class="text-danger"></span>
	        </div>
	        <div class="mb-3">
		        <label asp-for="@Model.ProjectId" class="form-label-add-edit">ProjectId</label>
                <input asp-for="@Model.ProjectId" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.ProjectId" class="text-danger"></span>
	        </div>
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit">Task Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label-add-edit">Task Description</label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
	            <label asp-for="@Model.StartDate" class="form-label-add-edit">Task creation date</label>
                <input asp-for="@Model.StartDate" class="form-control" placeholder="@Messages.DateFormat" />
	            <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
            </div>
	        <div class="mb-3">
		        <label asp-for="@Model.EndDate" class="form-label-add-edit">Task finish date</label>
				<input asp-for="@Model.EndDate" class="form-control" placeholder="dd/MM/yyyy" />
		        <span asp-validation-for="@Model.EndDate" class="text-danger"></span>
	        </div>
	        <div class="mb-3">
		        <label asp-for="@Model.Deadline" class="form-label-add-edit">Task Deadline</label>
		        <input asp-for="@Model.Deadline" class="form-control" placeholder="@Messages.DateFormat" />
		        <span asp-validation-for="@Model.Deadline" class="text-danger"></span>
	        </div>
            <div class="mb-3">
	            <label asp-for="@Model.PriorityId" class="form-label-add-edit">Select task priority</label>
	            <select asp-for="@Model.PriorityId" class="form-control" aria-required="true">
		            <option disabled selected value="">Select Category...</option>
		            @foreach (var p in Model.Priorities)
		            {
			            <option value="@p.Id">@p.Name</option>
		            }
	            </select>
	            <span asp-validation-for="@Model.PriorityId" class="text-danger"></span>
            </div>
            <div class="mb-3">
	            <label asp-for="@Model.StatusId" class="form-label-add-edit">Select task status</label>
                <select asp-for="@Model.StatusId" class="form-control" aria-required="true">
		            <option disabled selected value="">Select Category...</option>
		            @foreach (var s in Model.Statuses)
		            {
			            <option value="@s.Id">@s.Name</option>
		            }
	            </select>
                <span asp-validation-for="@Model.StatusId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div> 


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
