@model ProjectDetailsServiceModel

@{
	ViewBag.Title = "Project Details";
}

@section Styles {
	<link rel="stylesheet" href="~/css/pages/details.css?v=@DateTime.Now.Ticks" />
}

<div class="details-container">


	<!-- Header Section -->
	<div class="details-header">
		<h1 class="details-title">Project Overview</h1>
		<p class="details-subtitle">Comprehensive project information including client details, progress tracking, and resource allocation</p>
	</div>

	<!-- Main Content -->
	<div class="details-content">
		<div class="details-card">
			<div class="details-card-header">
				<div class="details-id">Project #@Model.ProjectNumber</div>
				<h2 class="details-name">@Model.ProjectName</h2>
			</div>

			<div class="details-card-body">
				<div class="details-grid">
					<!-- Project Information -->
					<div class="details-section">
						<h3 class="details-section-title">
							<svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
							</svg>
							Project Information
						</h3>
						<div class="detail-item">
							<span class="detail-label">
								<svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"></path>
								</svg>
								Project Number
							</span>
							<span class="detail-value" data-copyable><strong>@Model.ProjectNumber</strong></span>
						</div>
						<div class="detail-item">
							<span class="detail-label">
								<svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
								</svg>
								Status
							</span>
							<span class="detail-value">
								@{
									string statusClass = Model.Status.ToLower() switch
									{
										"completed" => "status-completed",
										"active" => "status-active",
										"in progress" => "status-in-progress",
										"pending" => "status-pending",
										_ => "status-inactive"
									};
								}
								<span class="status-badge @statusClass">
									<span class="status-indicator"></span>
									@Model.Status
								</span>
							</span>
						</div>
					</div>

					<!-- Client Information -->
					<div class="details-section">
						<h3 class="details-section-title">
							<svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
							</svg>
							Client Information
						</h3>
						<div class="detail-item">
							<span class="detail-label">
								<svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
								</svg>
								Client Name
							</span>
							<span class="detail-value">@Model.ClientName</span>
						</div>
						<div class="detail-item">
							<span class="detail-label">
								<svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
								</svg>
								Area of Appliance
							</span>
							<span class="detail-value">@Model.Appliance</span>
						</div>
					</div>

					<!-- Project Metrics -->
					<div class="details-section">
						<h3 class="details-section-title">
							<svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
							</svg>
							Project Metrics
						</h3>
						<div class="detail-item">
							<span class="detail-label">
								<svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
								</svg>
								Total Parts
							</span>
							<span class="detail-value"><strong>@Model.TotalParts</strong> parts</span>
						</div>
						<div class="detail-item">
							<span class="detail-label">
								<svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
								</svg>
								Hours Spent
							</span>
							<span class="detail-value"><strong>@Model.CalculatedTotalHours</strong> hours</span>
						</div>
					</div>
				</div>

				<!-- Time Tracking Section -->
				<div class="details-section">
					<div class="section-header">
						<h3 class="section-title">
							<svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
							</svg>
							Time Tracking & Progress
						</h3>
						<span class="section-count">@Model.FormattedCompletionPercentage complete</span>
					</div>

					<div class="time-tracking-grid">
						<div class="time-metric">
							<div class="metric-header">
								<h4>Actual Hours</h4>
								<span class="metric-subtitle">From finished tasks</span>
							</div>
							<div class="metric-value">@Model.FormattedCalculatedTotalHours</div>
						</div>

						<div class="time-metric">
							<div class="metric-header">
								<h4>Estimated Hours</h4>
								<span class="metric-subtitle">Total estimated</span>
							</div>
							<div class="metric-value">@Model.FormattedTotalEstimatedHours</div>
						</div>
					</div>

					<div class="progress-section">
						<div class="progress-header">
							<h4>Project Progress</h4>
							<span class="progress-percentage">@Model.FormattedCompletionPercentage</span>
						</div>
						<div class="progress-bar">
							<div class="progress-fill" style="width: @Model.CompletionPercentage%"></div>
						</div>
						<div class="task-summary">
							<div class="task-stat">
								<span class="task-count">@Model.FinishedTasksCount</span>
								<span class="task-label">Finished</span>
							</div>
							<div class="task-stat">
								<span class="task-count">@Model.InProgressTasksCount</span>
								<span class="task-label">In Progress</span>
							</div>
							<div class="task-stat">
								<span class="task-count">@Model.OpenTasksCount</span>
								<span class="task-label">Open</span>
							</div>
							<div class="task-stat">
								<span class="task-count">@Model.TotalTasksCount</span>
								<span class="task-label">Total</span>
							</div>
						</div>
					</div>

					<div class="project-health">
						<div class="health-indicator health-@Model.ProjectHealthStatus.ToLower().Replace(" ", "-")">
							<span class="health-status">@Model.ProjectHealthStatus</span>
							@if (Model.IsOnTrack)
							{
								<span class="health-badge">On Track</span>
							}
						</div>
					</div>
				</div>

				<!-- Parts Section -->
				<div class="details-section">
					<div class="section-header">
						<h3 class="section-title">
							<svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
							</svg>
							Project Parts
						</h3>
						<span class="section-count">@Model.Parts.Count() parts</span>
					</div>

					@if (Model.Parts.Any())
					{
						<div class="parts-list">
							@foreach (var part in Model.Parts.OrderBy(p => p.PartArticleNumber))
							{
								<div class="part-item">
									<div class="part-info">
										<div class="part-header">
											<h4 class="part-name">@part.Name</h4>
											<span class="part-article">@part.PartArticleNumber</span>
										</div>
										<div class="part-status">
											<span class="status-badge status-@part.Status.ToLower().Replace(" ", "-")">
												@part.Status
											</span>
										</div>
									</div>
									<div class="part-actions">
										<a href="@Url.Action("Details", "Part", new { id = part.Id, extension = part.GetPartExtension() })"
										   class="part-link">
											<svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
											</svg>
											View Details
										</a>
									</div>
								</div>
							}
						</div>
					}
					else
					{
						<div class="no-parts-message">
							<div class="empty-state">
								<svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
								</svg>
								<h4>No parts assigned</h4>
								<p>This project doesn't have any parts assigned to it yet.</p>
							</div>
						</div>
					}
				</div>

				<!-- Action Buttons -->
				@if (User.Identity?.IsAuthenticated == true && User.IsAdmin())
				{
					<div class="details-actions">
						<a href="@Url.Action("All", "Project")" class="details-btn details-btn-back">
							<svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
							</svg>
							Back to Projects
						</a>
						<a href="@Url.Action("Edit", "Project", new { id = Model.Id, extension = Model.GetProjectExtension() })" class="details-btn details-btn-edit">
							<svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
							</svg>
							Edit Project
						</a>
						<a href="@Url.Action("Delete", "Project", new { id = Model.Id, extension = Model.GetProjectExtension() })" class="details-btn details-btn-delete">
							<svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
							</svg>
							Delete Project
						</a>
					</div>
				}
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/js/pages/details.js?v=@DateTime.Now.Ticks"></script>
}
